<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/list_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:background="@drawable/list_image">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_item"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/light_dark"
                    />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_take_photo"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/btn_view_gallery"
            tools:ignore="RtlHardcoded" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_gallery"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="50dp"
            android:text="@string/gallery"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_switch_view"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_left"
            android:layout_width="50dp"
            android:layout_height="500dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/left_swipe_image"
            android:drawableEnd="@drawable/arrowl"
            tools:ignore="RtlHardcoded" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_right"
            android:layout_width="50dp"
            android:layout_height="500dp"
            android:layout_centerVertical="true"
            android:background="@drawable/right_swipe_image"
            android:drawableStart="@drawable/arrowr"
            android:drawableTintMode="add"
            tools:ignore="RtlHardcoded" />
</RelativeLayout>
