<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="@dimen/_30sdp" />
            <stroke android:width="1dp" android:color="@color/light_dark" />
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/light_green" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="@dimen/_30sdp" />
            <stroke android:width="1dp" android:color="@color/light_dark" />
            <gradient android:angle="270" android:endColor="@color/light_dark" android:startColor="@color/light_green" />
        </shape>
    </item>
</selector>