<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:topRightRadius="@dimen/_30sdp"
                android:bottomRightRadius="@dimen/_30sdp"/>
            <stroke android:width="1dp" android:color="@color/light_green" />
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="@dimen/_10sdp"
                />
            <solid android:color="@color/light_gray"/>
        </shape>
    </item>
</selector>